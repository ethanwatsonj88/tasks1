<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

	<%= label f, :user_id %>
	<%= number_input f, :user_id %>
	<%= error_tag f, :user_id %>

  <%= label f, :title %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :description %>
  <%= textarea f, :desc %>
  <%= error_tag f, :desc %>

  <%= label f, :time_spent %>
  <%= number_input f, :time_spent %>
  <%= error_tag f, :time_spent %>

  <%= label f, :completed %>
  <%= checkbox f, :completed %>
  <%= error_tag f, :completed %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
